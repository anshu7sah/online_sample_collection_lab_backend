model User {
  id     String    @id @default(cuid())
  mobile String    @unique
  name   String?
  dob    DateTime?

  // change this ↓
  otpHash    String? // store HMAC hash of OTP instead of raw OTP
  otpExpires DateTime? // expiry timestamp

  otpAttempts Int       @default(0) // count wrong attempts
  isLocked    Boolean   @default(false)
  lockedAt    DateTime? // optional – when account was locked

  isProfileComplete Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
