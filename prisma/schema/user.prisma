model User {
  id          String   @id @default(cuid())
  mobile      String   @unique
  name        String?
  dob         DateTime?
  otpCode     String?    // latest OTP (null after use)
  otpExpires  DateTime?  // expiry timestamp (null after use)
  isProfileComplete Boolean @default(false) // true after name + dob are filled
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}
